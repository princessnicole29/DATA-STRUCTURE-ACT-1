#include <iostream>
using namespace std;

int main() {
    int num, sum = 0;

    cout << "Enter integers (0 to stop):\n";

    while (true) {
        cin >> num;
        if (num == 0) {
            break;  // stop when user enters 0
        }
        if (num > 0) {
            sum += num;  // add only positive integers
        }
    }

    cout << "Sum of positive integers: " << sum << endl;

    return 0;
}
